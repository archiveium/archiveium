{
	"name": "archiveium-frontend",
	"version": "0.0.8-beta.1",
	"private": true,
	"scripts": {
		"dev": "vite dev",
		"build": "svelte-kit sync && vite build",
		"preview": "vite preview",
		"test": "playwright test",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"test:unit": "vitest run",
		"test:unit:monitor": "vitest",
		"lint": "prettier --plugin-search-dir . --check . && eslint .",
		"format": "prettier --plugin-search-dir . --write .",
		"release:prod": "release-it --ci --config release-it.json",
		"release:beta": "release-it --ci --config release-it.json --preRelease=beta",
		"release:dry-run": "release-it --ci --config release-it.json --dry-run",
		"typecheck": "tsc",
		"test:coverage": "vitest run --coverage"
	},
	"dependencies": {
		"@aws-sdk/client-s3": "3.256.0",
		"@tabler/icons-svelte": "^2.23.0",
		"@types/mailparser": "^3.4.0",
		"config": "^3.3.9",
		"imapflow": "1.0.119",
		"ioredis": "^5.3.1",
		"luxon": "^3.3.0",
		"mailparser": "^3.6.4",
		"postgres": "^3.3.3",
		"zod": "^3.20.6"
	},
	"devDependencies": {
		"@playwright/test": "^1.28.1",
		"@release-it/bumper": "^4.0.2",
		"@sveltejs/adapter-auto": "^2.0.0",
		"@sveltejs/adapter-node": "^1.3.1",
		"@sveltejs/kit": "^1.5.0",
		"@types/config": "^3.3.0",
		"@types/imapflow": "^1.0.11",
		"@types/luxon": "^3.2.0",
		"@typescript-eslint/eslint-plugin": "^5.45.0",
		"@typescript-eslint/parser": "^5.45.0",
		"@vitest/coverage-v8": "^0.32.4",
		"eslint": "^8.28.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-svelte": "^2.26.0",
		"prettier": "^2.8.0",
		"prettier-plugin-svelte": "^2.8.1",
		"release-it": "^15.6.0",
		"svelte": "^3.54.0",
		"svelte-check": "^3.0.1",
		"tslib": "^2.4.1",
		"typescript": "^5.0.0",
		"vite": "^4.3.0"
	},
	"type": "module"
}
